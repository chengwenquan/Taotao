	<!-- 扫描包加载service实现类 -->
	<context:component-scan base-package="com.taobao.rest.service"></context:component-scan>
		
		
	<!-- 
		配置单机版redis:
		constructor-arg:相当于JedisPool(String host,String port)，并把JedisPool交由Spring管理
		JedisClientSingle类中含有自动注入的JedisPool，所以会将 jedisPool注入
	-->
	<bean id="jedisPool" class="redis.clients.jedis.JedisPool">
		<constructor-arg name="host" value="192.168.124.100"></constructor-arg>
		<constructor-arg name="port" value="6379"></constructor-arg>
	</bean>
	<bean id="jedisClientSingle" class="com.taobao.rest.component.impl.JedisClientSingle"/>
	
	
